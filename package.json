{
  "name": "day-n-night",
  "version": "1.0.0",
  "description": "An electron app to show day & night left of the day",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "rm -rf dist && npm compile && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/superhit0/day-n-night.git"
  },
  "keywords": [
    "productivity"
  ],
  "author": "Abhimanyu Singh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/superhit0/day-n-night/issues"
  },
  "homepage": "https://github.com/superhit0/day-n-night#readme",
  "build": {
    "appId": "org.superhit0.day-n-night",
    "productName": "Day-n-Night",
    "mac": {
      "target": "dmg",
      "darkModeSupport": "true"
    }
  },
  "electronWebpack": {
    "main": {
      "webpackConfig": "webpack.server.config.js"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "electron": "^5.0.3",
    "electron-builder": "^20.43.0",
    "electron-webpack": "^2.6.2",
    "webpack": "^4.33.0"
  }
}
